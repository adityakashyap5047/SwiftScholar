<style>
    .btn-close:focus {
        outline: none;
        box-shadow: none;
    }
</style>
<% if(success && success.length) {%>
    <div class="alert alert-success alert-dismissible fade show col-lg-6 offset-lg-3 offset-md-3 col-md-6" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        <%= success %>
    </div>
<% } %>

<% if(error && error.length) {%>
    <div class="alert alert-danger alert-dismissible fade show col-lg-6 offset-lg-3 offset-md-3 col-md-6" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        <%= error %>
    </div>
<% } %>