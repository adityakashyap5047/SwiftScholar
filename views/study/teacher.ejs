<style>
    .teacher-details{
        display: flex;
        justify-content: center;
        margin-bottom: 25px;
        flex-direction: column;
        align-items: center;
    }
    .our-teachers{
        color: #0a85a3;
    }
    .carousel{
        max-width: 513px;
        border: none;
        border-radius: 2%;
    }
    .carousel-inner{
        border-radius: 2%;
    }
    .carousel-teacher-image{
        opacity: 0.4;
        border-radius: 2%;
    }
    .carousel-caption{
        text-align: start;
        padding-bottom: 0;
        color: #3b90e5;
        margin-bottom: -35px;
    }
    .teacher-profile-description{
        margin-bottom: -4px;
    }
    .teacher-profile-username{
        color: #0a85a3;
    }
</style>
<div class="teacher-details" id="teachers">
    <h3 class="our-teachers">Our Teachers</h3>
    <div id="carouselExampleCaptions" class="carousel slide">
        <div class="carousel-inner">
            <% for(let i = 0; i < allTeachers.length; i++) {%>
                <% if(i === 0) {%>
                    <div class="carousel-item active">
                        <img src="<%= allTeachers[i].profileImage %>"
                            class="d-block w-100 carousel-teacher-image" alt="teacher-profile-image">
                        <div class="carousel-caption">
                            <h5><%= allTeachers[i].name %></h5>
                            <h6><%= allTeachers[i].subject %></h6>
                            <p class="teacher-profile-description"><%= allTeachers[i].description %></p>
                            <p class="teacher-profile-username">@<i><%= allTeachers[i].username %></i></p>
                        </div>
                    </div>
                <% } else { %>
                    <div class="carousel-item">
                        <img src="<%= allTeachers[i].profileImage %>"
                            class="d-block w-100 carousel-teacher-image" alt="teacher-profile-image">
                        <div class="carousel-caption">
                            <h5><%= allTeachers[i].name %></h5>
                            <h6><%= allTeachers[i].subject %></h6>
                            <p class="teacher-profile-description"><%= allTeachers[i].description %></p>
                            <p class="teacher-profile-username">@<i><%= allTeachers[i].username %></i></p>
                        </div>
                    </div>
                <% } %>
            <% } %>
