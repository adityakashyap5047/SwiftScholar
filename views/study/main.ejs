<% layout("layouts/boilerplate") %>
<style>
    *{
    margin: 0;
    padding: 0;
    font-family: "Plus Jakarta Sans";
}

.main{
    display: flex;
    min-height: 100vh;
    justify-content: space-evenly;
}

.text{
    padding: 40px;
    text-align: center;
}

#heading{
    font-size: 3rem;
    margin-top: 100px;
    color: #008000;
}

#punchline{
    margin-top: 100px;
    font-size: 2.5rem;
    color: #0a85a3;
}

#subheading{
    margin-top: 25px;
    font-size: 2rem;
    color: #134f8b;
}

.starter-btn{
    margin-top: 100px;
    padding: 10px 20px;
    font-size: 1.5rem;
    border-radius: 10px;
    background-color: #134f8b;
    color: white;
    border: none;
    cursor: pointer;
}

.starter-btn:hover{
    background-color: #0a85a3;
}

.image{
    margin-top: 120px;
    margin-left: 100px;
}

.image-mobile {
    display: none;
}

#study-boy-image{
    height: 400px;
}

@media(max-width: 992px){
    #heading{
        font-size: 2.5rem;
    }

    #punchline{
        font-size: 2rem;
    }

    #subheading{
        font-size: 1.5rem;
    }

    #study-boy-image{
        height: 300px;
    }
}

@media(max-width: 890px){
    .main{
        flex-direction: column;
        justify-content: start;
    }

    .text{
        text-align: center;
    }

    #heading{
        margin: 0;
    }

    #punchline{
        margin-top: 25px;
    }

    .starter-btn{
        margin-top: 25px;
    }

    .image{
        text-align: center;
        margin: 0 auto;
    }

    .image-mobile{
        display: block;
        margin-top: 25px;
    }

    .image-web{
        display: none;
    }
}

@media(max-width: 725px){
    #heading{
        font-size: 2rem;
    }

    #punchline{
        font-size: 1.5rem;
    }

    #subheading{
        font-size: 1.25rem;
    }
}

@media(max-width: 375px){
    #heading{
        font-size: 1.75rem;
    }

    .image-mobile{
        margin-bottom: 50px;
    }

    .starter-btn{
        margin-top: 50px;
    }
}
</style>
<link rel="stylesheet" href="/css/study/main.css">
<body>
    <div class="main">
        <div class="text">
            <h1 id="heading">Your Doubts, Our Solutions</h1>
            <div class="image image-mobile"><img src="/assests/study-boy.jpg" id="study-boy-image" alt="study boy image"></div>
            <h2 id="punchline">Get Clear, Get Ahead</h2>
            <h3 id="subheading">Learn Better, Together</h3>
            <form action="/study/auth/signup">
                <button class="starter-btn">GET STARTED</button>
            </form>
        </div>
        <div class="image image-web">
            <img src="/assests/study-boy.jpg" id="study-boy-image" alt="study girl image">
        </div>
    </div>
</body>